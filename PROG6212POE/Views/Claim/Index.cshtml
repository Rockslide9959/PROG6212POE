@model IEnumerable<PROG6212POE.Models.Claim>

@{
    ViewData["Title"] = "Claim Status";
}

<h1>Claim Status</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Lecturer Name
            </th>
            <th>
                Monthly Salary
            </th>
            <th>
                Hours Worked
            </th>
            <th>
                Claim File
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LecturerName)
            </td>
            <td>
                R @Html.DisplayFor(modelItem => item.SalaryMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursWorked) Hours
            </td>
            <td>
                <a href="">FileUrl</a>
            </td>
            <td>
                <mark class="bg-danger text-white">Unapproved</mark>
            </td>
        </tr>
}
    </tbody>
</table>
