@model PROG6212POE.Models.Claim

@{
    ViewData["Title"] = "Create";
}

<h1>Submit a Claim</h1>

<h4>Fill our the below information and click enter to submit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LecturerName" class="control-label"></label>
                <input asp-for="LecturerName" class="form-control" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="SalaryMonth" class="control-label"></label>
                <input asp-for="SalaryMonth" class="form-control" />
                <span asp-validation-for="SalaryMonth" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="HoursWorked" class="control-label"></label>
                <input asp-for="HoursWorked" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
            <p></p>
            <!-- Uploading the file -->
            <div class="form-group">
                <label for="file">Supporting Document</label>
                <input type="file" name="file" class="form-control" accept=".docx,.pdf,.txt" />
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}