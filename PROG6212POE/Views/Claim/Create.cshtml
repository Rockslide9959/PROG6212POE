@model PROG6212POE.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
}

<h2 class="text-center mt-3">Submit New Claim</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="LecturerName" class="form-label"></label>
        <input asp-for="LecturerName" class="form-control" placeholder="Enter your full name" />
        <span asp-validation-for="LecturerName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SalaryMonth" class="form-label"></label>
        <input asp-for="SalaryMonth" type="month" class="form-control" />
        <span asp-validation-for="SalaryMonth" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="HoursWorked" class="form-label"></label>
            <input asp-for="HoursWorked" type="number" class="form-control" placeholder="Enter total hours" />
            <span asp-validation-for="HoursWorked" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="HourlyRate" class="form-label"></label>
            <input asp-for="HourlyRate" type="number" class="form-control" placeholder="Hourly rate in Rands" />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AdditionalNotes" class="form-label"></label>
        <textarea asp-for="AdditionalNotes" class="form-control" placeholder="Optional notes or comments"></textarea>
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Upload Supporting Document</label>
        <input type="file" name="document" class="form-control" accept=".pdf,.docx,.xlsx" />
        <small class="text-muted">Allowed formats: .pdf, .docx, .xlsx (Max 5MB)</small>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit Claim</button>
</form>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to My Claims</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
